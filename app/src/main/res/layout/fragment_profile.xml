<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/aux1"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/back"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="17sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="@color/aux1"/>
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tb"
            android:padding="20dp"
            android:background="@drawable/shadow2"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/user"
                android:layout_marginEnd="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DUKE CHIAHA"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_toEndOf="@id/user"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dchiaha@gmail.com"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="@color/aux7"
                android:layout_toEndOf="@id/user"
                android:layout_below="@id/user_name"/>
            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:drawableEnd="@mipmap/edit"
                android:drawableTint="@color/aux2"
                android:drawablePadding="7dp"
                android:paddingStart="6dp"
                android:paddingEnd="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bgshape2"
                android:backgroundTint="@color/mytransparent"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="@color/aux2"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shadow2"
            android:layout_margin="10dp"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textSize="13sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/aux3"/>
            <TextView
                android:id="@+id/mnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09099809876"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="@color/aux7"
                android:layout_toEndOf="@id/user"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Location"
                android:textSize="13sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/aux3"/>
            <TextView
                android:id="@+id/delloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NASS QUATERS, BLOCK L,FLAT 4, AFTER BERGER YARD, LIFECAMP ABUJA"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="@color/aux7"
                android:layout_toEndOf="@id/user"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textSize="13sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/aux7"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/exit"
            android:drawableTint="@color/aux7"
            android:drawablePadding="7dp"
            android:background="@drawable/shadow2"
            android:padding="12dp"/>
    </LinearLayout>
    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mytransparent"
        android:visibility="gone"/>
    <include layout="@layout/popup_dialog_profile" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>